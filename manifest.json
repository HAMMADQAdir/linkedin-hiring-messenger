{
  "manifest_version": 3,
  "name": "LinkedIn Hiring Messenger",
  "version": "1.0.0",
  "description": "Helps recruiters message LinkedIn applicants with safe, review-friendly automation.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/hiring/applicants/*",
        "https://www.linkedin.com/hiring/jobs/*/applicants/*"
      ],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Hiring Messenger"
  }
}
